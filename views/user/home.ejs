<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="text-center mb-5">Our Products</h2>
            </div>
        </div>
        <div class="row g-4">
            <% for(let i = 0; i < products.length; i++) { %>
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="product-card">
                        <div class="product-card-img">
                            <% if(products[i].productImage && products[i].productImage.length > 0) { %>
                                <img src="/uploads/re-image/<%= products[i].productImage[0] %>" alt="<%= products[i].productName %>">
                            <% } else { %>
                                <div class="no-image">No Image Available</div>
                            <% } %>
                            <div class="product-action">
                                <a href="/addToWishlist?id=<%= products[i]._id %>" class="action-btn">
                                    <i class="fas fa-heart"></i>
                                </a>
                                <a href="/productDetails?id=<%=products[i]._id%>" class="action-btn">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </div>
                        <div class="product-card-content">
                            <h3 class="product-title"><%= products[i].productName %></h3>
    
                            <div class="product-rating">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="far fa-star"></i>
                            </div>
                            <div class="product-price">
                                <% 
                                    const categoryOffer = products[i].category?.categoryOffer || 0;
                                    const productOffer = products[i].productOffer || 0;
                                    const totalOffer = categoryOffer + productOffer;
                                    const finalPrice = products[i].salePrice || (totalOffer > 0 ? 
                                        Math.round(products[i].regularPrice - (products[i].regularPrice * totalOffer / 100)) : 
                                        products[i].regularPrice);
                                %>
                                <% if (products[i].salePrice || totalOffer > 0) { %>
                                    <span class="old-price">₹<%= products[i].regularPrice %></span>
                                    <span class="current-price">₹<%= finalPrice %></span>
                                <% } else { %>
                                    <span class="current-price">₹<%= products[i].regularPrice %></span>
                                <% } %>
                            </div>
                            <a href="#" class="add-cart" data-product-id="<%= products[i]._id %>">+ Add To Cart</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">

<script>
    $(document).ready(function() {
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "2000"
        };
    });

    const addToCartButtons = document.querySelectorAll('.add-cart');
    addToCartButtons.forEach(button => {
        button.addEventListener('click', async function(e) {
            e.preventDefault();
            const productId = this.getAttribute('data-product-id');
            console.log('Adding product:', productId); // Debug log

            try {
                // Show loading state
                this.textContent = 'Adding...';
                this.style.opacity = '0.7';

                const response = await fetch('/addToCart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        productId: productId,
                        quantity: 1
                    }),
                    credentials: 'include' // Include cookies
                });

                console.log('Response status:', response.status); // Debug log
                const data = await response.json();
                console.log('Response data:', data); // Debug log

                // Reset button state
                this.textContent = '+ Add To Cart';
                this.style.opacity = '1';

                if (response.status === 401) {
                    toastr.warning('Please login to add items to cart');
                    setTimeout(() => {
                        window.location.href = '/login';
                    }, 1500);
                    return;
                }

                if (data.success) {
                    toastr.success('Product added to cart successfully!');
                } else {
                    throw new Error(data.message || 'Failed to add product to cart');
                }
            } catch (error) {
                console.error('Error:', error);
                // Reset button state
                this.textContent = '+ Add To Cart';
                this.style.opacity = '1';
                
                toastr.error(error.message || 'An error occurred while adding the product to cart');
            }
        });
    });
</script>
