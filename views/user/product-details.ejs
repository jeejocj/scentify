                            <div class="meta-item">
                                <span class="meta-label">Category:</span>
                                <%= product.category.name %>
                            </div>
                            <div class="meta-item">
                                <span class="meta-label">Brand:</span>
                                <%= product.brand.brandName %>
                            </div>
