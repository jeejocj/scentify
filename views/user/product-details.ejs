<%- include("../../views/partials/user/header") %>

<style>
    .breadcrumb-bar {
        background-color: #f8f9fa;
        padding: 30px;
        margin-bottom: 50px;
        display: flex;
        align-items: center;
        font-size: 14px;
        color: #6c757d;
    }
    .breadcrumb-bar a {
        color: #007bff;
        text-decoration: none;
    }
    .breadcrumb-bar a:hover {
        text-decoration: underline;
    }
    .breadcrumb-bar span {
        margin: 0 5px;
    }
    .ProductContainer {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }
    .product-detail {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
    }
    .product-images {
        flex: 1;
        min-width: 300px;
    }
    .main-image-container {
        position: relative;
        overflow: hidden;
        width: 100%;
        padding-top: 80%; /* Smaller Aspect Ratio */
    }
    .main-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 8px;
        transition: transform 0.3s ease;
    }
    .thumbnail-strip {
        display: flex;
        gap: 10px;
        margin-top: 10px;
        overflow-x: auto;
    }
    .thumbnail {
        width: 70px;
        height: 70px;
        object-fit: cover;
        border-radius: 4px;
        cursor: pointer;
        border: 2px solid transparent;
    }
    .thumbnail.active {
        border-color: #007bff;
    }
    .product-info {
        flex: 1;
        min-width: 300px;
    }
    h1 {
        font-size: 24px;
        margin-bottom: 10px;
    }
    .rating {
        color: #ffc107;
        font-size: 20px;
    }
    .price {
        font-size: 24px;
        font-weight: bold;
        color: #007bff;
        margin: 10px 0;
    }
    .quantity {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }
    .quantity button {
        background-color: #f8f9fa;
        border: 1px solid #ced4da;
        padding: 5px 10px;
        font-size: 16px;
        cursor: pointer;
    }
    .quantity span {
        padding: 5px 15px;
        border-top: 1px solid #ced4da;
        border-bottom: 1px solid #ced4da;
    }
    .add-to-cart {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 4px;
    }
    .add-to-cart:hover {
        background-color: #0056b3;
    }
    .product-meta {
        margin-top: 20px;
        font-size: 14px;
        color: #6c757d;
    }


    .review-section {
        margin-top: 40px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    .review-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid #ddd;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

    .average-rating {
        display: flex;
        align-items: center;
    }

    .average-rating h4 {
        margin: 0 10px;
    }

    .rating-bar {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .rating-bar li {
        display: flex;
        align-items: center;
        margin: 5px 0;
    }

    .rating-bar .progress {
        width: 60%;
        margin: 0 10px;
    }

    .review-card {
        border: 1px solid #ddd;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 5px;
        background-color: #fff;
    }

    .review-card .author {
        font-weight: bold;
    }

    .review-card .verified {
        background: #28a745;
        color: #fff;
        border-radius: 4px;
        font-size: 12px;
        padding: 2px 6px;
        margin-left: 5px;
    }

    .related-products {
        margin-top: 40px;
        padding: 20px;
    }

    .related-products h3 {
        margin-bottom: 20px;
    }

    .card img {
        object-fit: cover;
        height: 200px;
    }
</style>

<div class="breadcrumb-bar">
    <a href="/">Home</a>
    <span>></span>
    <span>Product Details</span>
</div>

<div class="ProductContainer">
    <div class="product-detail">
        <div class="product-images">
            <div class="main-image-container" onmousemove="zoomImage(event)" >
                <img id="mainImage" src="/uploads/re-image/<%= product.productImage[0] %>" alt="Product Image" class="main-image" onmouseleave="resetZoom(event)">
            </div>
            <div class="thumbnail-strip">
                <% for (let i = 0; i < product.productImage.length; i++) { %>
                    <div>
                        <img src="/uploads/re-image/<%= product.productImage[i] %>" alt="Product Thumbnail <%= i + 1 %>" class="thumbnail" onclick="changeImage(this)">
                    </div>
                <% } %>
            </div>
        </div>
        <div class="product-info">
            <h1><%= product.productName %></h1>
            <div class="rating">
                ★★★★☆ <span style="color: #6c757d; font-size: 14px;">(25 reviews)</span>
            </div>
            <p><%= product.brand %></p>
            <p><%= product.description %></p>
            <div class="price">
                <%= product.regularPrice %>
            </div>
            <div class="quantity">
                <button onclick="changeQuantity(-1)">-</button>
                <span id="quantity">1</span>
                <button onclick="changeQuantity(1)">+</button>
            </div>
            <button class="add-to-cart" onclick="addToCart()">Add to Cart</button>
            <div class="product-meta">
                <p>Stock Code: FWM15VKT</p>
                <p>Availability: <span style="color: #28a745;"><%= product.quantity %></span></p>
            </div>
        </div>
    </div>
</div>


