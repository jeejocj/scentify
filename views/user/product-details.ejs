    <!-- Related Products Section -->
    <section class="related-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="related-title text-center mb-5">Related Products</h2>
                </div>
            </div>
            <div class="row">
                <% relatedProducts.forEach(function(product) { %>
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="product-card">
                            <div class="product-card-img">
                                <% if (product.productImage && product.productImage.length > 0) { %>
                                    <img src="/uploads/re-image/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                                <% } else { %>
                                    <div class="no-image">No Image Available</div>
                                <% } %>
                                <% if (product.quantity <= 0 || product.status === 'out of stock') { %>
                                    <div class="out-of-stock-badge">Out of Stock</div>
                                <% } %>
                                <div class="product-action">
                                    <a href="#" class="action-btn">
                                        <i class="fas fa-heart"></i>
                                    </a>
                                    <a href="/productDetails?id=<%= product._id %>" class="action-btn">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="product-card-content">
                                <h3 class="product-title"><%= product.productName %></h3>
                                <div class="product-rating">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                </div>
                                <div class="product-price">
                                    <% 
                                        const categoryOffer = product.category?.categoryOffer || 0;
                                        const productOffer = product.productOffer || 0;
                                        const totalOffer = categoryOffer + productOffer;
                                        const finalPrice = product.salePrice || (totalOffer > 0 ? 
                                            Math.round(product.regularPrice - (product.regularPrice * totalOffer / 100)) : 
                                            product.regularPrice);
                                    %>
                                    <% if (product.salePrice || totalOffer > 0) { %>
                                        <span class="old-price">₹<%= product.regularPrice %></span>
                                        <span class="current-price">₹<%= finalPrice %></span>
                                    <% } else { %>
                                        <span class="current-price">₹<%= product.regularPrice %></span>
                                    <% } %>
                                </div>
                                <% if (product.quantity > 0 && product.status !== 'out of stock') { %>
                                    <a href="#" class="add-cart" data-product-id="<%= product._id %>">+ Add To Cart</a>
                                <% } else { %>
                                    <button class="out-of-stock-btn" disabled>Out of Stock</button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <script>
        $(document).ready(function() {
            toastr.options = {
                "closeButton": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "timeOut": "2000"
            };
        });

        const addToCartButtons = document.querySelectorAll('.add-cart');
        addToCartButtons.forEach(button => {
            button.addEventListener('click', async function(e) {
                e.preventDefault();
                const productId = this.getAttribute('data-product-id');
                // console.log('Adding product:', productId);

                try {
                    // Show loading state
                    this.textContent = 'Adding...';
                    this.style.opacity = '0.7';

                    const response = await fetch('/addToCart', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            productId: productId,
                            quantity: 1
                        }),
                        credentials: 'include'
                    });

                    // console.log('Response status:', response.status);
                    const data = await response.json();
                    // console.log('Response data:', data);

                    // Reset button state
                    this.textContent = '+ Add To Cart';
                    this.style.opacity = '1';

                    if (response.status === 401) {
                        toastr.warning('Please login to add items to cart');
                        setTimeout(() => {
                            window.location.href = '/login';
                        }, 1500);
                        return;
                    }

                    if (data.success) {
                        toastr.success('Product added to cart successfully!');
                    } else {
                        throw new Error(data.message || 'Failed to add product to cart');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    // Reset button state
                    this.textContent = '+ Add To Cart';
                    this.style.opacity = '1';
                    
                    toastr.error(error.message || 'An error occurred while adding the product to cart');
                }
            });
        });
    </script>

    <script>
        function changeImage(thumbnail) {
            const mainImage = document.getElementById('mainImage');
            mainImage.src = thumbnail.src;
            // Reset zoom when changing image
            resetZoom({ target: mainImage });
        }

        function zoomImage(e) {
            const image = e.target;
            if (!image.classList.contains('zoomed')) return;

            const zoomer = e.currentTarget;
            const x = (e.offsetX / zoomer.offsetWidth) * 100;
            const y = (e.offsetY / zoomer.offsetHeight) * 100;

            image.style.transformOrigin = `${x}% ${y}%`;
        }

        function resetZoom(e) {
            const image = e.target;
            image.style.transform = 'scale(1)';
            image.classList.remove('zoomed');
        }

        function toggleZoom(e) {
            const image = e.target;
            if (image.classList.contains('zoomed')) {
                resetZoom(e);
            } else {
                image.style.transform = 'scale(2.5)';
                image.classList.add('zoomed');
                zoomImage(e);
            }
        }

        function updateQuantity(change) {
            const input = document.getElementById('quantity');
            const currentValue = parseInt(input.value);
            const newValue = currentValue + change;

            // Check limits
            if (newValue < 1) {
                toastr.error('Quantity cannot be less than 1');
                return;
            }
            if (newValue > 5) {
                toastr.error('Maximum quantity allowed is 5');
                return;
            }

            input.value = newValue;
        }

        async function addToCart(productId) {
            const quantity = document.getElementById('quantity').value;

            try {
                const response = await fetch('/addToCart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        productId,
                        quantity: parseInt(quantity)
                    }),
                    credentials: 'include'
                });

                const data = await response.json();

                if (response.status === 401) {
                    toastr.warning('Please login to add items to cart');
                    setTimeout(() => {
                        window.location.href = '/login';
                    }, 1500);
                    return;
                }

                if (data.success) {
                    toastr.success('Product added to cart successfully!');
                } else {
                    throw new Error(data.message || 'Failed to add product to cart');
                }
            } catch (error) {
                console.error('Error:', error);
                toastr.error(error.message || 'An error occurred while adding the product to cart');
            }
        }

        // Initialize background images for related products
        document.addEventListener('DOMContentLoaded', function () {
            const bgElements = document.querySelectorAll('.set-bg');
            bgElements.forEach(element => {
                const bg = element.getAttribute('data-setbg');
                element.style.backgroundImage = `url('${bg}')`;
            });
        });
    </script>

