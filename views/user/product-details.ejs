    <!-- Product Details Section -->
    <section class="product-details">
        <div class="container">
            <div class="row">
                <!-- Product Gallery -->
                <div class="col-lg-6">
                    <div class="product-gallery">
                        <img src="/uploads/re-image/<%= product.productImage[0] %>" alt="<%= product.productName %>"
                            class="main-image" id="mainImage" onmousemove="zoomImage(event)"
                            onmouseleave="resetZoom(event)" onclick="toggleZoom(event)">
                        <div class="thumbnail-container">
                            <% product.productImage.forEach((image, index)=> { %>
                                <img src="/uploads/re-image/<%= image %>"
                                    alt="<%= product.productName %> - <%= index + 1 %>" class="thumbnail"
                                    onclick="changeImage(this)">
                                <% }); %>
                        </div>
                    </div>
                </div>

                <!-- Product Info -->
                <div class="col-lg-6">
                    <div class="product-info">
                        <h1 class="product-title mb-3"><%= product.productName %></h1>
                        
                        <!-- Price Information -->
                        <div class="product-price">
                            <!-- Regular Price -->
                            <div class="mb-2">
                                <span class="text-muted">M.R.P: </span>
                                <span class="h5 text-decoration-line-through text-muted">₹<%= product.regularPrice.toLocaleString('en-IN') %></span>
                            </div>

                            <!-- Best Price -->
                            <div class="best-price mt-2">
                                <div class="d-flex align-items-center">
                                    <div>
                                        <div class="h3 text-primary mb-0">₹<%= product.finalPrice.toLocaleString('en-IN') %></div>
                                    </div>
                                    <% if (product.savings > 0) { %>
                                        <div class="ms-3">
                                            <small class="text-success">
                                                You Save: ₹<%= product.savings.toLocaleString('en-IN') %>
                                            </small>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        
                        <div class="stock-status <%= product.quantity > 10 ? 'in-stock' : product.quantity > 0 ? 'low-stock' : 'out-of-stock' %>">
                            <% if (product.quantity > 10) { %>
                                <i class="fas fa-check-circle"></i> In Stock
                            <% } else if (product.quantity > 0) { %>
                                <i class="fas fa-exclamation-circle"></i> Only <%= product.quantity %> left
                            <% } else { %>
                                <i class="fas fa-times-circle"></i> Out of Stock
                            <% } %>
                        </div>

                        <div class="product-description">
                            <%= product.description %>
                        </div>

                        <div class="quantity-selector">
                            <button type="button" class="quantity-btn minus" onclick="updateQuantity(-1)"
                                aria-label="Decrease quantity"></button>
                            <input type="number" value="1" min="1" max="5" class="quantity-input" id="quantity"
                                readonly>
                            <button type="button" class="quantity-btn plus" onclick="updateQuantity(1)"
                                aria-label="Increase quantity"></button>
                        </div>

                        <% if (product.quantity > 0) { %>
                            <button class="add-to-cart" onclick="addToCart('<%= product._id %>')">
                                <i class="fa fa-shopping-cart"></i> Add to Cart
                            </button>
                        <% } %>

