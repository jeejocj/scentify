            <% relatedProducts.forEach(relatedProduct => { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="/uploads/re-image/<%= relatedProduct.productImage[0] %>">
                            <ul class="product__hover">
                                <li><a href="#" class="wishlist-btn"><i class="fas fa-heart"></i></a></li>
                                <li><a href="/productDetails?id=<%= relatedProduct._id %>" class="view-btn"><i class="fas fa-eye"></i></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6><a href="/productDetails?id=<%= relatedProduct._id %>"><%= relatedProduct.productName %></a></h6>
                            
                            <div class="rating">
                                <% for(let i = 0; i < 5; i++) { %>
                                    <% if (i < Math.floor(relatedProduct.averageRating || 0)) { %>
                                        <i class="fa fa-star"></i>
                                    <% } else if (i === Math.floor(relatedProduct.averageRating) && relatedProduct.averageRating % 1 !== 0) { %>
                                        <i class="fa fa-star-half-o"></i>
                                    <% } else { %>
                                        <i class="fa fa-star-o"></i>
                                    <% } %>
                                <% } %>
                            </div>

                            <% 
                                const categoryOffer = relatedProduct.category?.categoryOffer || 0;
                                const productOffer = relatedProduct.productOffer || 0;
                                const totalOffer = categoryOffer + productOffer;
                                const discountedPrice = Math.round(relatedProduct.regularPrice - (relatedProduct.regularPrice * totalOffer / 100));
                            %>

                            <% if (totalOffer > 0) { %>
                                <div class="product__item__offer">
                                    <%= totalOffer %>% OFF
                                </div>
                            <% } %>

                            <div class="product__item__price">
                                <% if (totalOffer > 0) { %>
                                    <span class="original-price">₹<%= relatedProduct.regularPrice %></span>
                                    <span class="sale-price">₹<%= discountedPrice %></span>
                                <% } else { %>
                                    <span class="sale-price">₹<%= relatedProduct.regularPrice %></span>
                                <% } %>
                            </div>

                            <a href="#" class="add-cart" onclick="addToCart('<%= relatedProduct._id %>', 1)">+ Add To Cart</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<script>
    function changeImage(thumbnail) {
        const mainImage = document.getElementById('mainImage');
        mainImage.src = thumbnail.src;
        // Reset zoom when changing image
        resetZoom({ target: mainImage });
    }

    function zoomImage(e) {
        const image = e.target;
        if (!image.classList.contains('zoomed')) return;
        
        const zoomer = e.currentTarget;
        const x = (e.offsetX / zoomer.offsetWidth) * 100;
        const y = (e.offsetY / zoomer.offsetHeight) * 100;
        
        image.style.transformOrigin = `${x}% ${y}%`;
    }

    function resetZoom(e) {
        const image = e.target;
        image.style.transform = 'scale(1)';
        image.classList.remove('zoomed');
    }

    function toggleZoom(e) {
        const image = e.target;
        if (image.classList.contains('zoomed')) {
            resetZoom(e);
        } else {
            image.style.transform = 'scale(2.5)';
            image.classList.add('zoomed');
            zoomImage(e);
        }
    }

    function updateQuantity(change) {
        const input = document.getElementById('quantity');
        const currentValue = parseInt(input.value);
        const newValue = currentValue + change;
        
        // Check limits
        if (newValue < 1) {
            toastr.error('Quantity cannot be less than 1');
            return;
        }
        if (newValue > 5) {
            toastr.error('Maximum quantity allowed is 5');
            return;
        }
        
        input.value = newValue;
    }

    async function addToCart(productId) {
        const quantity = document.getElementById('quantity').value;
        
        try {
            const response = await fetch('/addToCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    productId,
                    quantity: parseInt(quantity)
                }),
                credentials: 'include'
            });

            const data = await response.json();

            if (response.status === 401) {
                toastr.warning('Please login to add items to cart');
                setTimeout(() => {
                    window.location.href = '/login';
                }, 1500);
                return;
            }

            if (data.success) {
                toastr.success('Product added to cart successfully!');
            } else {
                throw new Error(data.message || 'Failed to add product to cart');
            }
        } catch (error) {
            console.error('Error:', error);
            toastr.error(error.message || 'An error occurred while adding the product to cart');
        }
    }

    // Initialize background images for related products
    document.addEventListener('DOMContentLoaded', function() {
        const bgElements = document.querySelectorAll('.set-bg');
        bgElements.forEach(element => {
            const bg = element.getAttribute('data-setbg');
            element.style.backgroundImage = `url('${bg}')`;
        });
    });
</script>

