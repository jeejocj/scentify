<!-- Product Details Section -->
<section class="product-details">
    <div class="container">
        <div class="row">
            <!-- Product Gallery -->
            <div class="col-lg-6">
                <div class="product-gallery">
                    <img src="/uploads/re-image/<%= product.productImage[0] %>" 
                         alt="<%= product.productName %>" 
                         class="main-image" 
                         id="mainImage"
                         onmousemove="zoomImage(event)"
                         onmouseleave="resetZoom(event)"
                         onclick="toggleZoom(event)">
                    <div class="thumbnail-container">
                        <% product.productImage.forEach((image, index) => { %>
                            <img src="/uploads/re-image/<%= image %>" 
                                 alt="<%= product.productName %> - <%= index + 1 %>" 
                                 class="thumbnail"
                                 onclick="changeImage(this)">
                        <% }); %>
                    </div>
                </div>
            </div>

            <!-- Product Info -->
            <div class="col-lg-6">
                <div class="product-info">
                    <h1 class="product-title"><%= product.productName %></h1>
                    
                    <div class="rating">
                        <% for(let i = 0; i < 5; i++) { %>
                            <% if (i < Math.floor(product.averageRating || 0)) { %>
                                <i class="fa fa-star"></i>
                            <% } else if (i === Math.floor(product.averageRating) && product.averageRating % 1 !== 0) { %>
                                <i class="fa fa-star-half-o"></i>
                            <% } else { %>
                                <i class="fa fa-star-o"></i>
                            <% } %>
                        <% } %>
                        <span class="rating-count">(<%= product.reviews?.length || 0 %> reviews)</span>
                    </div>

                    <div class="product-price">
                        <% if (totalOffer > 0) { %>
                            <span class="original-price">₹<%= product.regularPrice %></span>
                            <span>₹<%= Math.round(product.regularPrice - (product.regularPrice * totalOffer / 100)) %></span>
                            <span class="discount-badge"><%= totalOffer %>% OFF</span>
                        <% } else { %>
                            <span>₹<%= product.regularPrice %></span>
                        <% } %>
                    </div>

                    <div class="offer-details">
                        <% if (CategoryOffer > 0) { %>
                            <div class="offer-item">
                                <i class="fa fa-tag offer-icon"></i>
                                <span>Category Offer: <%= CategoryOffer %>% off</span>
                            </div>
                        <% } %>
                        <% if (ProductOffer > 0) { %>
                            <div class="offer-item">
                                <i class="fa fa-gift offer-icon"></i>
                                <span>Product Offer: <%= ProductOffer %>% off</span>
                            </div>
                        <% } %>
                        <div class="offer-item">
                            <i class="fa fa-truck offer-icon"></i>
                            <span>Free Delivery</span>
                        </div>
                        <div class="offer-item">
                            <i class="fa fa-shield offer-icon"></i>
                            <span>100% Authentic Products</span>
                        </div>
                    </div>

                    <p class="product-description"><%= product.description %></p>

                    <div class="quantity-selector">
                        <button type="button" class="quantity-btn minus" onclick="updateQuantity(-1)" aria-label="Decrease quantity"></button>
                        <input type="number" value="1" min="1" max="5" class="quantity-input" id="quantity" readonly>
                        <button type="button" class="quantity-btn plus" onclick="updateQuantity(1)" aria-label="Increase quantity"></button>
                    </div>

                    <button class="add-to-cart" onclick="addToCart('<%= product._id %>')">
                        <i class="fa fa-shopping-cart"></i>
                        Add to Cart
                    </button>

                    <div class="product-meta">
                        <div class="meta-item">
                            <span class="meta-label">Category:</span>
                            <%= category.name %>
                        </div>
                        <div class="meta-item">
                            <span class="meta-label">Brand:</span>
                            <%= product.brand %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

