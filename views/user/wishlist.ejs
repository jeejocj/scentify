<%- include("../../views/partials/user/header") %>

<style>
    /* Table Styles */
    .shopping__cart__table {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
        overflow: hidden;
        margin-top: 30px;
    }

    table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

    thead {
        background: #2d3436;
    }

    thead tr th {
        color: #ffffff !important;
        font-weight: 500;
        padding: 15px;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        text-align: center;
        border-bottom: none;
    }

    table thead th {
        color: #ffffff !important;
        background-color: #2d3436;
    }

    .shopping__cart__table table thead tr {
        background: #2d3436;
    }

    .shopping__cart__table table thead th {
        color: #ffffff !important;
        background: #2d3436;
    }

    th {
        font-weight: 500;
        padding: 15px;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        text-align: center;
    }

    td {
        padding: 20px 15px;
        vertical-align: middle;
        border-bottom: 1px solid #f1f1f1;
    }

    tbody tr:hover {
        background-color: rgba(45, 52, 54, 0.02);
    }

    /* Product Styles */
    .product__wishlist__item {
        width: 120px;
    }

    .product__wishlist__item__pic {
        width: 100px;
        height: 100px;
        border-radius: 10px;
        overflow: hidden;
        margin: 0 auto;
        background: #fff;
        padding: 5px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    }

    .product__wishlist__item__pic img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        transition: transform 0.3s ease;
    }

    .product__wishlist__item__pic:hover img {
        transform: scale(1.05);
    }

    .product__wishlist__item__text h6 {
        font-size: 1rem;
        color: #2d3436;
        margin-bottom: 8px;
        font-weight: 500;
    }

    .brand, .category {
        color: #6c757d;
        font-size: 0.85rem;
        margin: 4px 0;
    }

    .price {
        font-weight: 600;
        color: #2d3436;
    }

    .price .original-price {
        text-decoration: line-through;
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 4px;
        display: block;
    }

    .price .final-price {
        color: #2d3436;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .price .discount-tag {
        font-size: 0.8rem;
        color: #27ae60;
        display: block;
        margin-top: 4px;
    }

    .text-success {
        color: #27ae60 !important;
    }

    /* Button Styles */
    .action-btn {
        padding: 8px 16px;
        border-radius: 25px;
        font-size: 0.85rem;
        font-weight: 500;
        transition: all 0.3s ease;
        border: none;
        margin: 0 5px;
    }

    .btn-remove {
        background-color: #2d3436;
        color: white;
    }

    .btn-remove:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(45, 52, 54, 0.2);
        opacity: 0.9;
    }

    .btn-cart {
        background-color: #2d3436;
        color: white;
    }

    .btn-cart:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(45, 52, 54, 0.2);
        opacity: 0.9;
    }

    /* Empty Wishlist */
    .empty-wishlist {
        text-align: center;
        padding: 60px 20px;
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
        margin-top: 30px;
    }

    .empty-wishlist h3 {
        color: #2d3436;
        margin-bottom: 20px;
        font-weight: 500;
    }

    .continue__btn {
        margin-top: 20px;
    }

    .continue__btn a {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        color: #2d3436;
        font-weight: 500;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 25px;
        background: rgba(45, 52, 54, 0.1);
        transition: all 0.3s ease;
    }

    .continue__btn a:hover {
        background: rgba(45, 52, 54, 0.15);
        transform: translateX(-5px);
    }

    .continue__btn i {
        font-size: 1.1rem;
    }

    /* Stock Status */
    .stock-status {
        font-size: 0.85rem;
        padding: 5px 12px;
        border-radius: 15px;
        display: inline-block;
    }

    .in-stock {
        background-color: rgba(45, 52, 54, 0.1);
        color: #2d3436;
    }

    .out-stock {
        background-color: rgba(231, 76, 60, 0.1);
        color: #e74c3c;
    }

    .spad {
        padding-top: 40px;
        padding-bottom: 40px;
    }

    @media (max-width: 768px) {
        .shopping__cart__table {
            margin: 15px -15px;
            border-radius: 0;
        }

        table {
            display: block;
            overflow-x: auto;
            white-space: nowrap;
        }

        .product__wishlist__item {
            width: 80px;
        }

        .product__wishlist__item__pic {
            width: 70px;
            height: 70px;
        }

        .action-btn {
            padding: 6px 12px;
            font-size: 0.8rem;
        }
    }
</style>

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Wishlist</h4>
                    <div class="breadcrumb__links">
                        <a href="/">Home</a>
                        <span>Wishlist</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Wishlist Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <% if (wishlist && wishlist.length > 0) { %>
            <div class="row">
                <div class="col-lg-12">
                    <div class="shopping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Details</th>
                                    <th>Price</th>
                                    <th>Stock Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% wishlist.forEach(item => { %>
                                    <tr>
                                        <td class="product__wishlist__item">
                                            <div class="product__wishlist__item__pic">
                                                <% if (item.productId.productImage && item.productId.productImage.length > 0) { %>
                                                    <img src="/uploads/product-images/<%= item.productId.productImage[0] %>" alt="<%= item.productId.productName %>">
                                                <% } else { %>
                                                    <img src="/uploads/product-images/default.png" alt="No Image Available">
                                                <% } %>
                                            </div>
                                        </td>
                                        <td class="product__wishlist__item__text">
                                            <h6><%= item.productId.productName %></h6>
                                            <p class="brand"><strong>Brand:</strong> <%= item.productId.brand?.brandName || 'N/A' %></p>
                                            <p class="category"><strong>Category:</strong> <%= item.productId.category?.name || 'N/A' %></p>
                                        </td>
                                        <td class="price">
                                            <% if (item.discountPercentage > 0) { %>
                                                <span class="original-price">₹<%= item.regularPrice.toLocaleString() %></span>
                                                <span class="final-price">₹<%= item.finalPrice.toLocaleString() %></span>
                                                <span class="discount-tag">
                                                    <%= item.discountPercentage %>% OFF
                                                    <% if (item.offerType) { %>
                                                        - <%= item.offerType === 'category' ? 'Category Offer' : 
                                                              item.offerType === 'product' ? 'Product Offer' : 
                                                              item.offerType === 'sale' ? 'Sale Price' : '' %>
                                                    <% } %>
                                                </span>
                                            <% } else { %>
                                                <span class="final-price">₹<%= item.regularPrice.toLocaleString() %></span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (item.productId.quantity > 0) { %>
                                                <span class="badge bg-success">In Stock</span>
                                            <% } else { %>
                                                <span class="badge bg-danger">Out of Stock</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="d-flex justify-content-center gap-2">
                                                <button class="action-btn btn-cart" 
                                                        onclick="addToCart('<%= item.productId._id %>')"
                                                        <%= item.productId.quantity === 0 ? 'disabled' : '' %>>
                                                    <i class="fas fa-shopping-cart"></i> Add to Cart
                                                </button>
                                                <button class="action-btn btn-remove" onclick="removeFromWishlist('<%= item.productId._id %>')">
                                                    <i class="fas fa-trash"></i> Remove
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="continue__btn">
                                <a href="/shop">
                                    <i class="fa fa-arrow-left"></i>
                                    Continue shopping
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="empty-wishlist">
                <h3>Your wishlist is empty</h3>
                <div class="continue__btn">
                    <a href="/shop">
                        <i class="fa fa-arrow-left"></i>
                        Continue shopping
                    </a>
                </div>
            </div>
        <% } %>
    </div>
</section>
<!-- Wishlist Section End -->

<script>
async function removeFromWishlist(productId) {
    try {
        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonText: "Yes, remove it!",
            cancelButtonText: "No, cancel!",
            reverseButtons: true
        }).then(async (result) => {
            if (result.isConfirmed) {
                const response = await fetch(`/wishlist/remove/${productId}`, {
                    method: 'DELETE'
                });
                
                const data = await response.json();
                if (data.success) {
                    Swal.fire({
                        title: "Removed!",
                        text: "Item has been removed from wishlist.",
                        icon: "success",
                        showConfirmButton: false,
                        timer: 1500
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        title: "Error!",
                        text: data.message || "Error removing item from wishlist",
                        icon: "error"
                    });
                }
            }
        });
    } catch (error) {
        console.error('Error:', error);
        Swal.fire({
            title: "Error!",
            text: "Failed to remove item from wishlist",
            icon: "error"
        });
    }
}

async function addToCart(productId) {
    try {
        const response = await fetch('/addToCart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                productId: productId,
                quantity: 1
            })
        });

        if (response.status === 401) {
            toastr.warning('Please login to add items to cart');
            return;
        }

        const data = await response.json();
        if (data.success) {
            toastr.success('Product added to cart successfully!');
        }
    } catch (error) {
        toastr.error('Please login to add items to cart');
    }
}

function updateCartCount(count) {
    const cartCountElement = document.getElementById('cartCount');
    if (cartCountElement) {
        cartCountElement.textContent = count;
    }
}
</script>

