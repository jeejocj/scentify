        align-items: center;
        margin-bottom: 15px;
        padding-bottom: 15px;
        border-bottom: 1px solid #eee;
    }

    .product-image {
        width: 60px;
        height: 60px;
        margin-right: 15px;
    }

    .product-image img {
        width: 100%;
