    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

    <%- include("../../views/partials/user/footer") %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Configure Toastr
            toastr.options = {
                "closeButton": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "timeOut": "2000"
            };

            // Set background images for products
            const bgElements = document.querySelectorAll('.set-bg');
            bgElements.forEach(element => {
                const bg = element.getAttribute('data-setbg');
                if (bg) {
                    element.style.backgroundImage = `url('${bg}')`;
                } else {
                    // Set default image if no background is specified
                    element.style.backgroundImage = "url('/user-assets/img/product/default.jpg')";
                }
            });

            // Handle add to cart buttons
            const addToCartButtons = document.querySelectorAll('.add-cart');
            addToCartButtons.forEach(button => {
                button.addEventListener('click', async function(e) {
                    e.preventDefault();
                    const productId = this.getAttribute('data-product-id');
                    if (!productId) {
                        console.error('Product ID not found');
                        toastr.error('Error: Product ID not found');
                        return;
                    }
                    console.log('Adding product:', productId); // Debug log

                    try {
                        // Show loading state
                        this.textContent = 'Adding...';
                        this.style.opacity = '0.7';

                        const response = await fetch('/addToCart', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({
                                productId: productId,
                                quantity: 1
                            }),
                            credentials: 'include' // Include cookies
                        });

                        console.log('Response status:', response.status); // Debug log
                        const data = await response.json();
                        console.log('Response data:', data); // Debug log

                        // Reset button state
                        this.textContent = '+ Add To Cart';
                        this.style.opacity = '1';

                        if (response.status === 401) {
                            toastr.warning('Please login to add items to cart');
                            setTimeout(() => {
                                window.location.href = '/login';
                            }, 1500);
                            return;
                        }

                        if (data.success) {
                            toastr.success('Product added to cart successfully!');
                        } else {
                            throw new Error(data.message || 'Failed to add product to cart');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        // Reset button state
                        this.textContent = '+ Add To Cart';
                        this.style.opacity = '1';
                        
                        toastr.error(error.message || 'An error occurred while adding the product to cart');
                    }
                });
            });

            const searchForm = document.getElementById('searchForm');
            const searchInput = document.getElementById('searchInput');

            searchForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const searchQuery = searchInput.value.trim();
                
                // Get current URL parameters
                const urlParams = new URLSearchParams(window.location.search);
                
                // Update search parameter
                if (searchQuery) {
                    urlParams.set('query', searchQuery);
                } else {
                    urlParams.delete('query');
                }
                
                // Reset page number when searching
                urlParams.delete('page');
                
                // Keep other filters if they exist
                const newUrl = `/shop?${urlParams.toString()}`;
                window.location.href = newUrl;
            });
        });

        function viewProductDetails(productId) {
            window.location.href = `/product-details/${productId}`;
        }

        async function addToWishlist(productId) {
            try {
                const response = await fetch('/addToWishlist', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ productId })
                });

                const data = await response.json();
                if (data.success) {
                    toastr.success('Product added to wishlist');
                } else {
                    toastr.error(data.message || 'Error adding to wishlist');
                }
            } catch (error) {
                console.error('Error:', error);
                toastr.error('Failed to add to wishlist');
            }
        }
    </script>
</body>
</html>